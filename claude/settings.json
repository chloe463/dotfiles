{
  "permissions": {
    "allow": [],
    "deny": [
      "Read(.env*)",
      "Read(.envrc)",
      "Read(id_rsa)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/.aws/**)",
      "Read(**/.config/gcloud/**)",
      "Read(**/.azure/**)",
      "Read(**/credentials.json)",
      "Read(**/*-key.json)",
      "Read(~/.ssh/id_*)",
      "Read(~/.ssh/*_rsa)",
      "Read(~/.ssh/*_ecdsa)",
      "Read(~/.ssh/*_ed25519)",
      "Read(~/.ssh/id_ed25519)",
      "Read(~/.ssh/id_rsa)",
      "Read(~/.ssh/id_ecdsa)",
      "Read(~/.ssh/config)",
      "Read(~/.ssh/known_hosts)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(chmod 777 /*)",
      "Bash(chown root:*)",
      "Bash(> /dev/*)",
      "Bash(>> /dev/*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "Bash(kube:*)",
      "Bash(kubectl delete:*)",
      "Bash(terraform destroy:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(yarn remove:*)",
      "Bash(pnpm remove:*)",
      "Bash(npm publish:*)",
      "Bash(yarn publish:*)",
      "Bash(pnpm publish:*)",
      "Bash(cargo publish:*)",
      "Bash(deno publish:*)",
      "Bash(git push --force-with-lease origin main)",
      "Bash(git push --force-with-lease origin master)",
      "Bash(git push -f origin main)",
      "Bash(git push -f origin master)",
      "Bash(docker system prune -af)",
      "Bash(docker rm -f:*)",
      "Bash(docker rmi -f:*)",
      "Bash(docker volume rm:*)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/var/**)",
      "Edit(/opt/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/lib/**)",
      "Edit(/lib64/**)",
      "Edit(/boot/**)",
      "Edit(/proc/**)",
      "Edit(/sys/**)",
      "Edit(/dev/**)",
      "Edit(~/.ssh/id_*)",
      "Edit(~/.ssh/*_rsa)",
      "Edit(~/.ssh/*_ecdsa)",
      "Edit(~/.ssh/*_ed25519)",
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/var/**)",
      "Write(/opt/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/lib/**)",
      "Write(/lib64/**)",
      "Write(/boot/**)",
      "Write(/proc/**)",
      "Write(/sys/**)",
      "Write(/dev/**)",
      "Write(~/.ssh/id_*)",
      "Write(~/.ssh/*_rsa)",
      "Write(~/.ssh/*_ecdsa)",
      "Write(~/.ssh/*_ed25519)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(gh:*)",
      "Bash(npm install:*)",
      "Bash(yarn install:*)",
      "Bash(pnpm install:*)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Claude Codeが許可を求めています\" with title \"Claude Code\" subtitle \"確認待ち\" sound name \"Glass\"'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.mjs",
    "padding": 0
  },
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true
  },
  "model": "sonnet"
}
